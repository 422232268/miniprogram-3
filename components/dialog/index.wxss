/* component/popup.wxss */
.wx-popup {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #6f6f6f;
    z-index: 10000;
  }
  .popup-container {
    position: fixed;
    left: 50%;
    top: 50%;
    border-bottom: 12rpx solid #f1f1f1;
    width: 95%;
    max-width: 95%;
    border-radius: 10rpx;
    box-sizing: bordre-box;
    transform: translate(-50%, -50%); 
    overflow: hidden;
    background: #f1f1f1;
  }
  .wx-popup-title {
    width: 100%;
    padding: 18rpx;
    text-align: center;
    font-size: 38rpx;
    color: #78be00;
    background-color: #262b3a;
  }
  .wx-popup-con {
    margin: 60rpx 10rpx;
    text-align: center;
  }
  .wx-popup-btn {
    display: flex;
    justify-content: space-around;
    margin-bottom: 40rpx;
  }
  .wx-popup-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30%;
    height: 88rpx;
    border: 2rpx solid #ccc;
    border-radius: 88rpx;
  }
